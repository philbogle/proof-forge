rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /theorems/{theoremId} {
      allow read;
      allow write: if request.auth != null && request.auth.token.email == 'philbogle@gmail.com';
    }
    match /proofs/{proofId} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
