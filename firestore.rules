rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to theorems and their proofs
    match /theorems/{theoremId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'philbogle@gmail.com';
    }
    
    match /proofs/{proofId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'philbogle@gmail.com';
    }
  }
}
